{% if currencies|length > 1 %}
<div class="pull-left">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-currency" title="{{ text_currency }}">
  <div class="btn-group">
      <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
      {% for currency in currencies %}
      {% if currency.symbol_left and currency.code == code %}
       <strong><span class="hidden-md hidden-lg">{{ currency.symbol_left }}</span></strong> 
       {% elseif currency.symbol_right and currency.code == code %} 
       <strong><span class="hidden-md hidden-lg">{{ currency.symbol_right }}</span></strong>
       {% endif %}
      {% endfor %} 
      <span class="hidden-xs hidden-sm ">{{ text_currency }}</span>&nbsp;<!-- <i class="fa fa-caret-down"></i>--></button>
      <ul class="dropdown-menu currency-menu">
        {% for currency in currencies %}
        {% if currency.symbol_left %}
        <li >
          <button class="currency-select btn btn-link btn-block" type="button" name="{{ currency.code }}" title="{{ currency.code }}" >{{ currency.symbol_left }} </button>
        </li >
        {% else %}
        <li>
          <button class="currency-select btn btn-link btn-block" type="button" name="{{ currency.code }}" title="{{ currency.code }}" >{{ currency.symbol_right }}</button>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
  </div>
  <input type="hidden" name="code" value="" />
    <input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
</div>
{% endif %} 